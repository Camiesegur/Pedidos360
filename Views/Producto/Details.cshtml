@model Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>Detalles del Producto</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Categoría</dt>
    <dd class="col-sm-10">@Model.Categoria?.Nombre</dd>

    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

    <dt class="col-sm-2">Impuesto (%)</dt>
    <dd class="col-sm-10">@Model.ImpuestoPorc</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>

    <dt class="col-sm-2">Activo</dt>
    <dd class="col-sm-10">@((Model.Activo) ? "Sí" : "No")</dd>

    <dt class="col-sm-2">Imagen</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
        {
            <img src="@Model.ImagenUrl" style="max-width:150px; max-height:150px;" />
        }
    </dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
