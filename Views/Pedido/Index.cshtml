@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Pedidos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Pedido</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Subtotal</th>
            <th>Impuestos</th>
            <th>Total</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Cliente?.Nombre</td>
                <td>@p.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@p.Subtotal.ToString("C")</td>
                <td>@p.Impuestos.ToString("C")</td>
                <td>@p.Total.ToString("C")</td>
                <td>@p.Estado</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
